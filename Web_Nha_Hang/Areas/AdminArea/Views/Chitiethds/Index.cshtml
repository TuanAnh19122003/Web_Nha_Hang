@model PagedList.IPagedList<Web_Nha_Hang.Models.Chitiethd>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* CSS nằm ở đây hoặc bạn có thể đặt trong file CSS riêng */
    .pagination {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding: 20px 0; /* Điều chỉnh giá trị này để thay đổi khoảng cách giữa các số trang */
    }

        .pagination a {
            margin: 0 20px; /* Khoảng cách giữa các số trang */
        }
</style>
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content" style="padding-top:30px">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 text-end text-danger text-uppercase">
                        Danh sách chi tiết hóa đơn
                    </div>
                    <div class="col-6 text-right">
                        <a href="@Url.Action("Create","Chitiethds")" class="btn btn-success"><i class="fas fa-plus"></i> Thêm</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Hoadon.mahd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().mamon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().soluong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().dongia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().thanhtien)
                            </th>
                            <th>Chức năng</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hoadon.mahd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.mamon)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.soluong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dongia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.thanhtien)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.macthd })" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="@Url.Action("Details", new { id = item.macthd })" class="btn btn-info"><i class="fas fa-info"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.macthd })" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="pagination">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                    </div>
                }
                else
                {
                    <p>Không có dữ liệu.</p>
                }
            </div>
        </div>
    </section>
</div>


