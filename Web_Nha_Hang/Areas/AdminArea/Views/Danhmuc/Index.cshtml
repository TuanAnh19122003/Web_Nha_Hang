@model IEnumerable<Web_Nha_Hang.Models.Danhmuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content"  style="padding-top:30px">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 text-end text-danger text-uppercase">
                        Danh mục món ăn
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="text-right">
                    <a href="@Url.Action("Create","Danhmuc")" class="btn btn-success"><i class="fas fa-plus"></i> Thêm</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.tendm)</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.tendm)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.madm })" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="@Url.Action("Details", new { id = item.madm })" class="btn btn-info"><i class="fas fa-info"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.madm })" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
