@model Web_Nha_Hang.Models.Ban

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content" style="padding-top:30px">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 text-end">
                        Thông tin chi tiết bàn
                    </div>
                    <div class="col-6 float-end">
                        <a href="@Url.Action("Edit", new { id = Model.maban })" class="btn btn-sm btn-success"> <i class="fas fa-edit"></i> Edit </a>
                        <a href="@Url.Action("Index","Ban")" class="btn btn-sm btn-success"> <i class="fas fa-long-arrow-alt-left"></i> Back </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.tenban)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.tenban)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.trangthai)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.trangthai)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.soluong)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.soluong)
                    </dd>

                </dl>
            </div>
        </div>
    </section>
</div>
