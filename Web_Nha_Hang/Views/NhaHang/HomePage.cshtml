<!-- services -->
<section class="services py-5">
    <div class="container py-lg-5">
        <h3 class="heading text-center mb-sm-5 mb-4">Featured Dishes</h3>
        <div class="row offer-grids">
            @foreach (var monAn in Model)
            {
                if (counter >= 6)
                {
                    break;
                }

                <div class="col-lg-4 col-md-6">
                    <div class="ser@(monAn.mamon)">
                        <div class="bg-layer">
                            <a href="@Url.Action("Menu", "NhaHang")">
                                <img src="@Url.Content("~/Uploads/" + monAn.anh)" alt="Image" class="card-img-top" style="height: 200px; object-fit: cover;" />
                            </a>
                            <h4 style="text-align:center">@monAn.tenmon</h4>
                        </div>
                    </div>
                </div>

                counter++;
            }
        </div>
    </div>
</section>
